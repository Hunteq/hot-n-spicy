<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>Manage Categories</h2>
  <a href="/add-category" class="button">+ Add New Category</a>
</div>

<ul class="admin-posts">
  <% data.forEach(category => { %>
    <li>
      <div class="post-item">
        <div class="post-details">
          <h3><%= category.name %></h3>
          <p><%= category.description %></p>
        </div>
      </div>
      <div class="admin-post-controls">
        <a href="/edit-category/<%= category._id %>" class="btn">Edit</a>
        <form action="/delete-category/<%= category._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" class="btn-delete btn">
        </form>
      </div>
    </li>
  <% }) %>
</ul>