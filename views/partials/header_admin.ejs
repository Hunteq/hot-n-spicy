  </div>
  <div class="overlay"></div>
</header>

<div id="githubAlert" class="github-alert" style="display: none;">
  <div class="github-alert-overlay"></div>
  <div class="github-alert-box">
    <div class="github-alert-header">
      <h3>Confirm logout</h3>
      <button class="github-alert-close">&times;</button>
    </div>
    <div class="github-alert-body">
      <p>Are you sure you want to log out?</p>
    </div>
    <div class="github-alert-footer">
      <button class="github-alert-btn github-alert-btn-secondary" id="cancelLogout">Cancel</button>
      <button class="github-alert-btn github-alert-btn-primary" id="confirmLogout">Log out</button>
    </div>
  </div>
</div>

<script>
  // Mobile menu toggle for admin
  const hamburger = document.querySelector('.hamburger');
  const mobileMenu = document.querySelector('.mobile-menu');
  const overlay = document.querySelector('.overlay');
  
  hamburger.addEventListener('click', function() {
      this.classList.toggle('active');
      mobileMenu.classList.toggle('active');
      overlay.classList.toggle('active');
  });
  
  overlay.addEventListener('click', function() {
      hamburger.classList.remove('active');
      mobileMenu.classList.remove('active');
      this.classList.remove('active');
  });

  // GitHub-style logout confirmation
  const logoutBtn = document.getElementById('logoutBtn');
  const mobileLogoutBtn = document.querySelector('.mobile-logout-btn');
  const githubAlert = document.getElementById('githubAlert');
  const cancelLogout = document.getElementById('cancelLogout');
  const confirmLogout = document.getElementById('confirmLogout');
  const alertClose = document.querySelector('.github-alert-close');
  const alertOverlay = document.querySelector('.github-alert-overlay');

  function showLogoutAlert() {
    githubAlert.style.display = 'block';
    document.body.style.overflow = 'hidden'; // Prevent scrolling
  }

  function hideLogoutAlert() {
    githubAlert.style.display = 'none';
    document.body.style.overflow = ''; // Restore scrolling
  }

  function performLogout() {
    // Close mobile menu if open
    hamburger.classList.remove('active');
    mobileMenu.classList.remove('active');
    overlay.classList.remove('active');
    
    // Redirect to logout page
    window.location.href = '/logout';
  }

  // Event listeners for logout buttons
  logoutBtn.addEventListener('click', function(e) {
    e.preventDefault();
    showLogoutAlert();
  });

  mobileLogoutBtn.addEventListener('click', function(e) {
    e.preventDefault();
    showLogoutAlert();
  });

  // Event listeners for alert actions
  cancelLogout.addEventListener('click', hideLogoutAlert);
  alertClose.addEventListener('click', hideLogoutAlert);
  alertOverlay.addEventListener('click', hideLogoutAlert);
  confirmLogout.addEventListener('click', performLogout);

  // Close alert with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && githubAlert.style.display === 'block') {
      hideLogoutAlert();
    }
  });
</script>

