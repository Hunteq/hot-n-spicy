<a href="/categories">&larr; Back</a>
<div class="admin-title">
  <h2>Edit Category</h2>
  <form action="/delete-category/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>
</div>

<form action="/edit-category/<%= data._id %>?_method=PUT" method="POST">
  <label for="name"><b>Category Name</b></label>
  <input type="text" placeholder="Category Name" name="name" value="<%= data.name %>" required>

  <label for="description"><b>Description</b></label>
  <textarea name="description" cols="50" rows="5"><%= data.description %></textarea>

  <input type="submit" value="Update Category" class="btn">
</form>